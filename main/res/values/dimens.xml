    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <dimen name="activity_about_land_midgap">16dp</dimen>
    <dimen name="activity_about_textview_vertical_padding">16dp</dimen>

    <dimen name="actionpanel_button_fontsize">20sp</dimen>
    <dimen name="actionpanel_progress_padding">5dp</dimen>
    <dimen name="actionpanel_span">80dp</dimen>
    <dimen name="actionpanel_refresh_padding">10dp</dimen>
